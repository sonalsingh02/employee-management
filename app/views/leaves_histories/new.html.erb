<div class="container">
  <%= form_for([@employee, @leaves_history],:html => {:class => 'form-signin'}) do |f| %>
  <h2 class="form-signin-heading">Apply Leaves</h2>
  	<div class="form-group">
    	<%= f.label :start_date, :class => "sr-only"%><br>
      <%= f.date_field :start_date, :class => "form-control", autofocus: true %>
    </div>
    <div class="form-group">
    	<%= f.label :end_date, :class => "sr-only" %><br>
      <%= f.date_field :end_date, :class => "form-control", autofocus: true %>
    </div>
  	<div class="form-group">
      <%= f.submit "Apply Leave",:class=> "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
  <%= link_to 'Back', employee_leaves_histories_path %>
</div>
